# .env.example
# Copy this file to .env and update with your values

# Environment Configuration
SOC_ENVIRONMENT=dev
SOC_DEBUG=true
SOC_LOG_LEVEL=DEBUG

# Database Configuration
SOC_DB_HOST=localhost
SOC_DB_PORT=5432
SOC_DB_NAME=soc_framework_dev
SOC_DB_USER=soc_user
SOC_DB_PASSWORD=your_db_password_here

# Redis Configuration
SOC_REDIS_HOST=localhost
SOC_REDIS_PORT=6379
SOC_REDIS_DB=0
SOC_REDIS_PASSWORD=
SOC_REDIS_SSL=false

# Security Configuration
SOC_ENCRYPTION_KEY_ID=dev_encryption_key_12345
SOC_TOKEN_EXPIRY_HOURS=168
SOC_JWT_ALGORITHM=HS256
SOC_SESSION_TIMEOUT=120

# Performance Configuration
SOC_MAX_CONCURRENT_AGENTS=10
SOC_AGENT_TIMEOUT=600
SOC_STATE_CACHE_TTL=1800
SOC_BATCH_SIZE=50
SOC_MEMORY_LIMIT_MB=1024

# Notification Configuration
SOC_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SOC_SMTP_HOST=localhost
SOC_SMTP_PORT=587
SOC_PAGERDUTY_KEY=your_pagerduty_key_here

# Feature Flags
SOC_ENABLE_LEARNING=true
SOC_ENABLE_AUTO_RESPONSE=false
SOC_ENABLE_METRICS=true

# SIEM Configuration (if not using config files)
SPLUNK_ENDPOINT=https://your-splunk.company.com:8089
SENTINEL_ENDPOINT=https://your-sentinel.company.com
QRADAR_ENDPOINT=https://your-qradar.company.com

# Credential Provider Configuration (for production)
# Uncomment and configure based on your credential provider

# HashiCorp Vault
# VAULT_URL=https://vault.company.com:8200
# VAULT_TOKEN=your_vault_token

# AWS Secrets Manager
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Azure Key Vault
# AZURE_KEY_VAULT_URL=https://your-kv.vault.azure.net/